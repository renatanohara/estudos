import java.time.Duration;
import java.util.concurrent.TimeUnit;

import org.junit.After;
import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.By.ByName;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

public class TestarArquivoLocal {
	
	static WebDriver driver; 
	
	@BeforeClass
	public static void preCondicao() {
		System.setProperty("webdriver.chrome.driver", "/home/nohara/Dropbox/Murah/chromedriver/137/chromedriver-linux64/chromedriver");
		driver = new ChromeDriver();
		
		driver.get("file:///home/nohara/git/hub/cursos/CasaDoCodigo/seleniunWebDrive/aprendendo_selenium/src/main/java/goToGoogle.html");
		driver.manage().window().maximize(); // maximiza a janela
	}
	
	@Test
	public void comoEncontrarElementos() {
		driver.get("file:///home/nohara/git/hub/cursos/CasaDoCodigo/seleniunWebDrive/aprendendo_selenium/src/main/java/goToGoogle.html");

		// quando possível de preferência ao id e name e vite o xpath por ser mais lento
		WebElement caixaDePesquisaPorNome = driver.findElement(By.name("inputName"));
		WebElement caixaDePesquisaPorId = driver.findElement(By.id("btnId"));
		
		// outros exemplos, menos seguros pois pode ter mais de um elemento que corresponda
		WebElement caixaDePesquisaPorClasse = driver.findElement(By.className("formBtn"));
		WebElement porLink = driver.findElement(By.linkText("Va para o Google"));
		WebElement porLinkParcial = driver.findElement(By.partialLinkText("Google"));
		WebElement tagName = driver.findElement(By.tagName("input"));
		
		// Pegando um elemento filho:
		// Primeiro vou pegar a div de fora:
		WebElement div = driver.findElement(By.className("div"));
		// Agpra vou usar o elemento que encontrei para pesquisar o input interno (filho)
		WebElement input = div.findElement(By.tagName("input"));
		
		WebElement seletorCCS = driver.findElement(By.cssSelector(".formBtn"));
		
		// Pegando o primeiro elemento da lista
		WebElement primeiroItemDaLista = driver.findElement(By.cssSelector("li:first-child"));
	}
	
	@Test
	public void sendKeys() {
		WebElement caixaDePesquisa = driver.findElement(By.cssSelector("#inputId"));

		String texto1 = "Brigadeiro com RedBull";
		String texto2 = "Coca-cola com bolinha de queijo";
		
		caixaDePesquisa.sendKeys(texto1);
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(5));
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("inputId")));
		caixaDePesquisa.sendKeys(texto2);

	}
	
	
